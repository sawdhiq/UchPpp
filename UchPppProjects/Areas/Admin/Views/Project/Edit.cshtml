@model UchPpp.Models.Project

<form method="post" asp-action="Edit">
    <div class="container align-items-center">
    <div class="border p-3 mt-4 w-75 m-auto">
        <div class="row pb-2">
            <h4 class=""><i class="bi bi-pencil-fill"></i> &nbsp; Edit Project</h4>
            <hr/>
        </div>
       
        <div class="mb-3 w-100">
            <i class="bi bi-person-circle"></i>&nbsp;<label asp-for="ContractorName"></label>
            <input asp-for="ContractorName" class="form-control"/>
            <span asp-validation-for="ContractorName" class="text-danger"></span>
        </div>
         <div class="mb-3 w-100">
           <i class="bi bi-geo-fill"></i>&nbsp; <label asp-for="ContractorAddress"></label>
            <input asp-for="ContractorAddress" class="form-control"/>
            <span asp-validation-for="ContractorAddress" class="text-danger"></span>
        </div>
        <div class="mb-3 w-100">
           <i class="bi bi-telephone-fill">&nbsp;</i> <label asp-for="PhoneNo"></label>
            <input asp-for="PhoneNo" class="form-control"/>
            <span asp-validation-for="PhoneNo" class="text-danger"></span>
        </div>
        <div class="mb-3 w-100">
           <i class="bi bi-envelope-fill"></i> &nbsp;<label asp-for="EmailAddress"></label>
            <input asp-for="EmailAddress" class="form-control"/>
            <span asp-validation-for="EmailAddress" class="text-danger"></span>
        </div>
        <div class="mb-3 w-100">
            <i class="bi bi-gear-wide-connected"></i>&nbsp;<label asp-for="ProjectName"></label>
            <input asp-for="ProjectName" class="form-control"/>
            <span asp-validation-for="ProjectName" class="text-danger"></span>
        </div>
         <div class="mb-3 w-100">
            <i class="bi bi-building"></i>&nbsp;<label asp-for="ProjectLocation"></label>
            <input asp-for="ProjectLocation" class="form-control"/>
            <span asp-validation-for="ProjectLocation" class="text-danger"></span>
        </div>
         <div class="mb-3 w-100">
            <i class="bi bi-calendar-event-fill">&nbsp;</i><label asp-for="ExpirationDate"></label>
            <input asp-for="ExpirationDate" class="form-control"/>
            <span asp-validation-for="ExpirationDate" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:170px"><i class="bi bi-pencil-fill"></i> &nbsp; Update</button>
       &nbsp;&nbsp; <a asp-controller="Project" asp-action="Index" class="btn btn-secondary" style="width:170px"><i class="bi bi-arrow-left-circle-fill"></i> &nbsp; Back to List</a>
    </div>
    </div>

</form>
@section Scripts
{
    @{
 <partial name="_ValidationScriptsPartial" />

}
}

